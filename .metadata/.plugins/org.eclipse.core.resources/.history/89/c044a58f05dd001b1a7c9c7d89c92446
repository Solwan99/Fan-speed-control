#ifndef TIMERS_H_
#define TIMERS_H_

#include <avr/io.h>
#include "hal_common_types.h"

/*
Timers are a special driver. Therefore, I suggest to wrap MCU peripherals through services better than init patterns. 
*/

void attachTimerInterrupt(const uint8_t timer_number, const uint32_t microseconds, const fnptr timeroverflowisr);
void detachTimerInterrupt(uint8_t timer_number);




#endif /* TIMERS_H_ */